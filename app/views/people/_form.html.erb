<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
<h1>Страница редактирования профиля</h1>
  <div class="col-lg-4">
    <div class="container">
      <h3>Аватар</h3>
      
      <%= image_tag(@person.avatar_url, width: "200") if @person.avatar? %> 
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %> 

    </div>
  </div>
  
  <div class="col-lg-8">
    <div class="container">
        <div class="field">
          <%= f.label "Логин:" %><br>
          <%= f.text_field :login, size: "40" %>
        </div>
        <div class="field">
          <%= f.label "Возраст:" %><br>
          <%= f.number_field :age %>
        </div>
        <div class="field">
          <%= f.label "О себе:" %><br>
          <%= f.text_area :about, size: "40x6" %>
        </div>
        <div class="actions">
          <%= f.submit "Сохранить" %>
        </div>
      <% end %>

    </div>

  </div>
</div>

