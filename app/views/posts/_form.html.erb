<%= form_for @post do |f| %>
    <p>
       <%= select_tag(:category_id, options_for_select(@categories), 
                      :prompt => "Select one!") %>  
    </p>
    <p>
      <%= f.label "Заголовок:" %><br/>
      <%= f.text_field :title, size: "40" %>
    </p>
    <p>
      <%= f.label "Содержимое:" %><br>
      <%= f.text_area :body, size: "40x6" %>
    </p>
    <p>  
      <%= f.submit "Сохранить" %>
    </p>  
  <% end %>