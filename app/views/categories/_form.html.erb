<%= form_for @category do |f| %>
    <p>
      <%= f.label "Название:" %><br/>
      <%= f.text_field :name, size: "40" %>
    </p>

    <p>
      <%= f.label "Oписание:" %><br/>
      <%= f.text_area :description, size: "40x6" %>
    </p>

    <p>  
      <%= f.submit "Сохранить" %>
    </p>  
<% end %>